<main class="mt-5 pt-3">
	{{>flash}}
	<div class="mt-5 container-fluid py-4">
		<div class="col-12 col-lg-10 col-xxl-8 mx-auto">
			<div class="bd-wrap-tinn">

				<div class="bd-tinn">
    

					<h2 class="headerText-tinn">Mua thẻ điện thoại</h2>
					<form action="/transactions/phonecard" method="post">
						<div class="row g-3 mb-5">
							<div class="col-sm-6">
								<label for="feeTypesSelectd" class="form-label">Nhà mạng</label>
								<select
									class="form-select"
									id="feeTypesSelectd"
									name="phoneServiceProviderCode"
								>
									<option selected></option>
									<option value="Viettel">Viettel</option>
									<option value="Mobiphone">Mobiphone</option>
									<option value="Vinaphone">Vinaphone</option>
								</select>
							</div>
							<div class="col-sm">
								<label for="feeTypesSelectd" class="form-label">Loại thẻ</label>
								<select
									class="form-select"
									id="feeTypesSelectd"
									name="price"
								>
									<option selected></option>
									<option value="10000">10.000đ</option>
									<option value="20000">20.000đ</option>
									<option value="50000">50.000đ</option>
									<option value="100000">100.000đ</option>
								</select>
							</div>
							<div class="col-sm">
								<label for="feeTypesSelectd" class="form-label">Số lượng</label>
								<select
									class="form-select"
									id="feeTypesSelectd"
									name="phoneCardQuantity"
								>
									<option selected></option>
									<option value="1">1</option>
									<option value="2">2</option>
									<option value="3">3</option>
									<option value="4">4</option>
									<option value="5">5</option>

								</select>
							</div>
						</div>

						<div class="d-grid gap-2">
							<button
								class="btn btn-primary"
								type="submit"
								value="Submit"
							>Hoàn tất</button>
						</div>
					</form>

				</div>
			</div>

		</div>

	</div>

</main>