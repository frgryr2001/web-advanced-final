<main class="mt-5 pt-3">
	<div class="mt-5 container-fluid py-4">
		<div class="col-12 col-lg-10 col-xxl-8 mx-auto">
			<div class="bd-wrap-tinn">

				<div class="bd-tinn">
					<h2 class="headerText-tinn">Nạp tiền</h2>
					<form action="/transactions/deposit" method="post">
						<div class="mb-3">
							<label for="userName" class="form-label">Họ và tên</label>
							<input
								type="email"
								class="form-control"
								id="userName"
								placeholder=""
							/>
						</div>
						<div class="row g-3 mb-3">
							<div class="col-sm-6">
								<label for="cardNumber" class="form-label">Số thẻ</label>
								<input
									type="email"
									class="form-control"
									id="cardNumber"
									{{! aria-label="City" }}
								/>
							</div>
							<div class="col-sm">
								<label for="cardDate" class="form-label">Ngày hết hạn</label>

								<input
									type="date"
									id="cardDate"
									class="form-control"
									{{! aria-label="State" }}
								/>
							</div>
							<div class="col-sm">
								<label for="cardCCV" class="form-label">CCV</label>

								<input
									type="text"
									class="form-control"
									id="cardCCV"
									{{! aria-label="Zip" }}
								/>
							</div>
							<div class="mb-3">
								<label for="userName" class="form-label">Số tiền</label>
								<input
									type="number"
									class="form-control"
									id="userName"
									placeholder=""
								/>
							</div>
						</div>
						<div class="d-grid gap-2">
							<button
								class="btn btn-primary"
								type="submit"
								value="Submit"
							>Hoàn tất</button>
						</div>
					</form>

				</div>
			</div>
		</div>

	</div>

</main>